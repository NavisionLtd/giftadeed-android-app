<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewAdvisory"
        android:layout_width="@dimen/gridmenuimg_width"
        android:layout_height="@dimen/gridmenuimg_width"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/advisory" />

    <TextView
        android:id="@+id/txtBoardPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:text="Board Person Name"
        android:textColor="@color/black"
        android:textSize="@dimen/finaltextfont" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgTwitter"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/twitter" />

        <ImageView
            android:id="@+id/imgLinkedIn"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/linkedin" />

        <ImageView
            android:id="@+id/imgGooglePlus"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/googleplus" />

        <ImageView
            android:id="@+id/imgFacebook"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/facebook" />

        <ImageView
            android:id="@+id/imgWorld"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/world" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtAboutMe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/aboutMe"
        android:textSize="@dimen/finaltextfont"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/advisoryDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:text=""
        android:textSize="@dimen/finaltextfont" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_btn_bg_color" />

</LinearLayout>