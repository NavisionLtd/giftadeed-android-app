<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1.8"
                android:textColorHint="@color/grey">

                <EditText
                    android:id="@+id/tv_select_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/grey"
                    android:drawableRight="@android:drawable/arrow_down_float"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="@string/select_res_group"
                    android:longClickable="false"
                    android:textColor="@color/grey"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="0.2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1.8"
                android:textColorHint="@color/grey">

                <EditText
                    android:id="@+id/resource_select_cat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/grey"
                    android:textColor="@color/grey"
                    android:drawableRight="@android:drawable/arrow_down_float"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="@string/res_cat"
                    android:longClickable="false"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:id="@+id/resource_selected_cat_image"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="0.2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/res_sub_cat_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1.8"
                android:textColorHint="@color/grey">

                <EditText
                    android:id="@+id/tv_select_sub_categories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/grey"
                    android:textColor="@color/grey"
                    android:drawableRight="@android:drawable/arrow_down_float"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="@string/res_subcat"
                    android:longClickable="false"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="0.2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@drawable/current_locn" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/resource_location_inputlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:hint="@string/select_location"
                android:textColorHint="@color/grey">

                <EditText
                    android:id="@+id/resource_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/grey"
                    android:textColor="@color/grey"
                    android:editable="false"
                    android:focusable="false" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <EditText
            android:id="@+id/editText_resource_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:hint="@string/res_name"
            android:inputType="text"
            android:maxLength="100"
            android:singleLine="true"
            android:textColor="@color/grey"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editText_resource_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:hint="@string/res_desc"
            android:inputType="textMultiLine"
            android:maxLength="200"
            android:textColor="@color/grey"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/select_resource_visibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/grey">

                <EditText
                    android:id="@+id/select_resource_audience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/grey"
                    android:textColor="@color/grey"
                    android:drawableRight="@android:drawable/arrow_down_float"
                    android:editable="false"
                    android:focusable="false"
                    android:textSize="16sp"
                    android:hint="@string/res_audi"
                    android:longClickable="false" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <Button
            android:id="@+id/button_create_resource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_background"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:text="@string/create_res"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>