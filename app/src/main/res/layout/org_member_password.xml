<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D9000000"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center_vertical"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/drawer_icon_width"
                android:layout_height="@dimen/drawer_icon_width"
                android:src="@drawable/first_login" />

            <TextView
                android:id="@+id/firstloginhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Organization Member"
                android:textColor="#fff"
                android:textSize="@dimen/finalheaderfont" />

            <View
                android:layout_width="@dimen/drawer_icon_width"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/org_member_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                android:layout_marginTop="20dp"
                android:textColorHint="#fff">

                <EditText
                    android:id="@+id/et_org_member_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/colorAccent"
                    android:hint="New password"
                    android:inputType="textPassword"
                    android:textColor="#FFFFFF"
                    android:textColorHighlight="#eeec2b09"
                    android:textColorHint="#FFFFFF"
                    android:textSize="@dimen/finaltextfont" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/org_member_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColorHint="#fff">

                <EditText
                    android:id="@+id/et_org_member_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/colorAccent"
                    android:hint="Confirm password"
                    android:inputType="textVisiblePassword"
                    android:textColor="#FFFFFF"
                    android:textColorHighlight="#eeec2b09"
                    android:textColorHint="#FFFFFF"
                    android:textSize="@dimen/finaltextfont" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_password_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btnbackground"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/finalheaderfont" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
